<resources>
    <!-- Base application theme. -->
    <style name="Theme.EDuSolutionAssistant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="LoginTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Main_Frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/shape_toolbar01</item>
    </style>

    <style name="Main_Frame_Back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/baseline_back_white</item>
        <item name="android:contentDescription">@string/todo</item>
    </style>

    <style name="Main_Frame_Logo">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:src">@drawable/logo</item>
    </style>

    <style name="Main_Frame_Heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/iconIv</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">-20dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Dashboard_User">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/dashboard_user</item>
    </style>

    <style name="Dashboard_UserName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_below">@+id/titleTv</item>
        <item name="android:text">@string/abc_example_com</item>
    </style>

    <style name="Logout_Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@string/todo</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:src">@drawable/ic_logout_white</item>
    </style>

    <style name="Dashboard_Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardMaxElevation">12dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Dashboard_Card_Heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dashboard_Button_Start">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="Dashboard_Button_Center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Dashboard_Button_End">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="Searchbar_Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardMaxElevation">12dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Searchbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:queryHint">@string/books</item>
    </style>

    <style name="Heading_List_Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/card_search</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardMaxElevation">12dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Heading_List_Card_Description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/toolbarRL</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardMaxElevation">12dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Heading_List">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Card_View_List">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_below">@+id/card_headling</item>
         <item name="cardBackgroundColor">@color/white</item>
         <item name="cardCornerRadius">20dp</item>
         <item name="cardElevation">10dp</item>
         <item name="cardMaxElevation">12dp</item>
         <item name="cardPreventCornerOverlap">true</item>
         <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Grid_Layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:columnCount">3</item>
        <item name="android:rowCount">3</item>
    </style>

    <style name="Books_Notes_Tutorial_List_Image">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:contentDescription">@string/todo</item>
    </style>

    <style name="Books_Notes_Tutoria_List_Rating">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Description_Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">430dp</item>
        <item name="android:layout_below">@+id/card_headling</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
        <item name="contentPadding">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardMaxElevation">12dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Description_Book_Layout">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Book_Details">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toEndOf">@+id/book_Rl</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Book_Description">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>